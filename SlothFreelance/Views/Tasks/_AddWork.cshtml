@model SlothFreelance.Models.WorkOnTask

    <div class="block-task">
        @using (Html.BeginForm("AddWork", "Tasks", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TaskId)
            <label for="UploadFile" class="button-nadpis">Загрузить работу</label>
            <input type="file" id="UploadFile" name="UploadFile" />
            @Html.TextAreaFor(model => model.Comment, htmlAttributes: new { @placeholder = "Комментарий" })
            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            <div class="d-flex justify-content-end">
                <button type="submit" class="button_r">
                    Отправить
                </button>
            </div>
        }
    </div>