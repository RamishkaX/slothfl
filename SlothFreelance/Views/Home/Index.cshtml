@model IEnumerable<SlothFreelance.Models.Tasks>

@{
    ViewBag.Title = "Главная";
}

<section id="home-info" class="home-info ots">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="zag">SLOTH FREELANCE</h1>
                <h2 class="nad"> У вас есть задача с которой вы не справляетесь?</h2>
                <h3 class="nad">Разместите задачу и выберите грамотного специалиста</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto mr-auto ots">
                <a href="~/Tasks/CreateTask">
                    <div class="button d-flex align-items-center justify-content-center text-center">
                        <h2 class="butnad">РАЗМЕСТИТЬ ЗАДАЧУ</h2>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<section id="last-task" class="last-task">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="lastt">Последние размещенные задачи</h1>
            </div>
        </div>
        <div class="row">
            @if (Model.Count() == 0)
            {
                <div class="col-lg-10 ml-auto mr-auto">Нет размещенных задач</div>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-10 ml-auto mr-auto">
                        <a href="~/Tasks/TaskDetails/@item.TaskId">
                            <div class="block-task">
                                <div class="d-flex  justify-content-between">
                                    <div class="button-zag">@item.TaskName</div>
                                    <div class="button-price">@item.Price</div>
                                </div>
                                <div class="button-ops">
                                    @item.Description
                                </div>
                                <div class="d-flex align-items-end">
                                    <div class="button-kat">@item.Category.CategoryName</div>
                                    <div class="ml-auto button-kat" style="margin-right:13px;">@item.PublishDate</div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            <div class="col-lg-4 mr-auto ml-auto">
                <a href="~/Tasks" class="buttonChangeColor">
                    <div class="button d-flex align-items-center justify-content-center">
                        <h2 class="butnad">ПРОСМОТРЕТЬ ВСЁ</h2>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>