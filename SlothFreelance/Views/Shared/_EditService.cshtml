@model SlothFreelance.Models.AddService

<div onclick="ajaxFormValid()" class="button_nadpis text-center">Напишите название услуги</div>
<hr />
@using (Ajax.BeginForm("EditService", "Account", new { }, new AjaxOptions { OnSuccess = "editServiceImage", OnBegin = "modalButtonDisable()", OnFailure = "modalHaveErrors()", HttpMethod = "Post" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ServiceId)
    @Html.EditorFor(model => model.ServiceName, new { htmlAttributes = new { @class = "form-control", placeholder = "Название услуги" } })
    @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
    <button type="submit" class="button_uslugi ml-auto">
        <div class="button_nadpis">Далее</div>
    </button>
}

