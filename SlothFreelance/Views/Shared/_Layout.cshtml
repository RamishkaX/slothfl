<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Sloth Freelance</title>
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&family=Roboto+Condensed:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="modaldiv">
        <button type="button" class="close">&times;</button>
        <div id="modal_content">
        </div>
    </div>
    <header id="header" class="header">
        <div class="container">
            <div class="row d-flex align-items-center">
                <div class="col-lg-2 col-sm-2 col-3 logo-hed">
                    <div>
                        <a href="/"><img src="~/Content/Assets/logo.png" alt="Sloth Freelance" class="img-fluid"></a>
                    </div>
                </div>
                <div class="col-lg-9 col-sm-4 col-md-8 col-4">
                    <nav class="navbar navbar-expand-md navbar-dark">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="collapsibleNavbar">
                            <div class="menu__nav">
                                <ul class="menu d-flex justify-content-between">
                                    <li class="menu__block">
                                        @Html.ActionLink("О нас", "AboutUs", "Home")
                                    </li>
                                    <li class="menu__block">
                                        @Html.ActionLink("Задачи", "Index", "Tasks")
                                    </li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="menu__block">
                                            @Html.ActionLink("Счет", "MoneyAccount", "Account")
                                        </li>
                                        <li class="menu__block">
                                            @Html.ActionLink("Настройки", "Index", "Settings")
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="menu__block">
                                            @Html.ActionLink("Конфиденциальность", "PrivacyPolicy", "Home")
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="col-lg-1 col-sm-2 col-3">
                    @if (User.Identity.IsAuthenticated)
                    {
                        {Html.RenderAction("HeaderUser", "Home");}
                    }
                    else
                    {
                        <a href="/Account/Login"><div class="button header-button text-center">Войти</div></a>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <footer id="footer" class="footer">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <div class="logo-bot col-lg-3 col-sm-2 col-3">
                        <a href="/"><img src="~/Content/Assets/logo.png" alt="Sloth Freelance" class="img-fluid"></a>
                    </div>
                    <div class="col-lg-9 col-sm-10 ">
                        <nav>
                            <ul class="menu1 d-flex justify-content-between">
                                <li class="menu__block">
                                    @Html.ActionLink("О нас", "AboutUs", "Home")
                                </li>
                                <li class="menu__block">
                                    @Html.ActionLink("Задачи", "Index", "Tasks")
                                </li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="menu__block">
                                        @Html.ActionLink("Счет", "MoneyAccount", "Account")
                                    </li>
                                    <li class="menu__block">
                                        @Html.ActionLink("Настройки", "Index", "Settings")
                                    </li>
                                }
                                else
                                {
                                    <li class="menu__block">
                                        @Html.ActionLink("Конфиденциальность", "PrivacyPolicy", "Home")
                                    </li>
                                }
                            </ul>
                        </nav>
                        <div class="ots d-flex align-items-center justify-content-center">
                            <a href="#"> <img src="~/Content/Assets/inst.png" class="img-fluid"></a>
                            <a href="#"> <img src="~/Content/Assets/vk.png" class="img-fluid"></a>
                            <a href="#"> <img src="~/Content/Assets/tg.png" class="img-fluid"></a>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 ml-auto mr-auto">
                                <div class=" d-flex align-items-center justify-content-center">
                                    <a>
                                        <div class="prim">@Html.ActionLink("ПОЛИТИКА КОНФИДЕНЦИАЛЬНОСТИ", "PrivacyPolicy", "Home")</div>
                                    </a>
                                    <div class="prim ml-auto">(С) 2020-@DateTime.Now.Year Sloth Freelance</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <div class="overlay"></div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
